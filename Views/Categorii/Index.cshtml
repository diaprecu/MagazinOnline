@model IEnumerable<MagazinOnline.Models.DatabaseModels.Categorie>

@{
    ViewBag.Title = "Categorii";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div>
    @Html.ActionLink("Adăugare", "Create", null, new { @class = "btn btn-success" })
</div>
  

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Denumire)
        </th>
        <th>Acțiuni</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Editare", "Edit", new { id = item.ID }, new { @class = "btn btn-dark" })
                    @Html.ActionLink("Detalii", "Details", new { id = item.ID }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Ștergere", "Delete", new { id = item.ID }, new { @class = "btn btn-dark" })
                </div>
            </td>
        </tr>
    }

</table>

