<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magazin Online - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-3 m-0 border-0 bd-example">
    <nav class="navbar navbar-expand-lg bg-dark fixed-top">
        <div class="container-fluid gap-4" style="padding-left:5%; padding-right:5%;">
            @Html.ActionLink("Magazin Online", "MagazinOnline", "Magazin", null, new { @class = "navbar-brand text-light" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Produse", "Index", "Produse", null, new { @class = "nav-link text-secondary" })</li>
                    <li class="nav-item">@Html.ActionLink("Furnizori", "Index", "Furnizori", null, new { @class = "nav-link text-secondary" })</li>
                    <li class="nav-item">@Html.ActionLink("Categorii", "Index", "Categorii", null, new { @class = "nav-link text-secondary" })</li>
                    <li class="nav-item">@Html.ActionLink("Utilizatori", "Index", "Utilizatori", null, new { @class = "nav-link text-light" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content pb-5 pt-5">
        @RenderBody()
    </div>

    <nav class="navbar fixed-bottom bg-dark">
        <div class="container-fluid justify-content-xl-center">
                <p class="text-light">&copy; @DateTime.Now.Year - Precup Diana Alesia</p>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
