@model MagazinOnline.Models.DatabaseModels.Utilizator

@{
    ViewBag.Title = "Ștergere Utilizator";
}

<h2>@ViewBag.Title</h2>

<h3 class="text-danger">Sunteți sigur că vreți să ștergeți acest Utilizator?</h3>
<h5 class="text-warning">*Acest utilizator nu va mai putea accesa magazinul online.</h5>
<hr />
<div>
    <div>
        <h4 class="text-success">@Html.DisplayFor(model => model.Username)</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nume)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nume)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Prenume)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Prenume)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Parola)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Parola)
            </dd>

        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ștergere" class="btn btn-danger" />
            @Html.ActionLink("Înapoi la listă", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
