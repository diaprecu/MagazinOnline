@model MagazinOnline.Models.DatabaseModels.Utilizator

@{
    ViewBag.Title = "Editare Utilizator";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
